{{!-- Sets up the index.handlebars to have the template that Handlebars can render onto. --}}

<h1>Burgermania!</h1>

<h2>Burgers I would like!</h2>

<ul>

  {{#each burgers}}
  {{#unless this.devoured}}
  <li>
    {{this.burger_name}}

    <button class="devour-burger" data-id="{{this.id}}" data-devoured="{{this.devoured}}">DEVOUR!</button>
    
  </li>
  {{!-- {{hbsObject.burgers devoured=false}} --}}
  {{/unless}}
  {{/each}}
  
</ul>

<h2>Burgers that I've devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if this.devoured}}
   <li>
    {{this.burger_name}}
  </li>
  {{!-- {{hbsObject.burgers devoured=true}} --}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  {{!-- Creates a button in index.handlebars that will submit the user input into the database. --}}
  <button type="submit">Add Burger</button>
</form>